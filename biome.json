{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", ".next"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"complexity": {
				"noUselessLoneBlockStatements": "off"
			},
			"correctness": {
				"noUnusedImports": {
					"level": "warn",
					"fix": "none"
				},
				"noUnusedVariables": {
					"level": "warn",
					"fix": "none"
				},
				"noChildrenProp": "off"
			},
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"bracketSameLine": true,
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "single"
		}
	}
}
